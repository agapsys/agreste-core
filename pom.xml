<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.agapsys</groupId>
    <artifactId>agreste-core</artifactId>
    <version>0.1.0</version>

    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
    </properties>

    <name>AGRESTE (Core Library)</name>
    <description>A full-stack REST framework for java applications</description>
    <url>https://github.com/agapsys/agreste</url>

    <licenses>
        <license>
            <name>The Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>Agapsys Tecnologia Ltda-ME</name>
            <email>contact@agapsys.com</email>
            <organization>Agapsys Tecnologia Ltda-ME</organization>
            <organizationUrl>http://www.agapsys.com</organizationUrl>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git@github.com:agapsys/agreste.git</connection>
        <url>git@github.com:agapsys/agreste.git</url>
    </scm>

    <organization>
        <name>Agapsys Tecnologia Ltda-ME</name>
        <url>http://www.agapsys.com</url>
    </organization>

    <dependencies>
        <!-- Test dependencies -->
        <dependency>
            <groupId>com.agapsys</groupId>
            <artifactId>console-utils</artifactId>
            <version>[0.1.0, 1.0.0)</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.10</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.agapsys</groupId>
            <artifactId>web-app-toolkit-test</artifactId>
            <version>[0.1.0, 1.0.0)</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <version>1.4.193</version>
            <scope>test</scope>
        </dependency>
        

        <!-- Compile dependencies -->
        <dependency>
            <groupId>com.agapsys</groupId>
            <artifactId>rcf-core</artifactId>
            <version>[0.1.0, 1.0.0)</version>
        </dependency>
        <dependency>
            <groupId>com.agapsys</groupId>
            <artifactId>jpa-utils</artifactId>
            <version>[0.1.0, 1.0.0)</version>
        </dependency>
        <dependency>
            <groupId>com.agapsys</groupId>
            <artifactId>web-app-toolkit-core</artifactId>
            <version>[0.1.0, 1.0.0)</version>
        </dependency>

        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-entitymanager</artifactId>
            <version>5.1.3.Final</version>
        </dependency>

        <!-- Provided dependencies -->
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-web-api</artifactId>
            <version>7.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>

        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>

        <plugins>

			<!-- jpa-scanner-maven-plugin -->
            <plugin>

                <groupId>com.agapsys</groupId>
                <artifactId>jpa-scanner-maven-plugin</artifactId>
                <version>0.1.0</version>

                <executions>
                    <execution>
                        <id>plugin-build</id>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>

                    <execution>
                        <configuration>
                            <includeTests>true</includeTests>
                        </configuration>
                        <id>test-code</id>
                        <goals>
                            <goal>list</goal>
                        </goals>
                    </execution>
                </executions>

            </plugin>

			<!-- build-helper-maven-plugin -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.12</version>

				<executions>
					<execution>
						<goals>
							<goal>add-test-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>../agreste-test/src/main/java</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>

        </plugins>
    </build>
</project>