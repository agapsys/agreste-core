<web-fragment>
	
	<filter>
		<filter-name>com.agapsys.agreste.abuseCheckFilter</filter-name>
		<filter-class>com.agapsys.agreste.servlets.AbuseCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>com.agapsys.agreste.abuseCheckFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>com.agapsys.agreste.SecurityListener</listener-class>
	</listener>
	
	<context-param>
		<description>Default web security manager used by application</description>
		<param-name>com.agapsys.agreste.webSecurityManager</param-name>
		<param-value>com.agapsys.security.web.SessionCsrfSecurityManager</param-value>
	</context-param>
	
</web-fragment>
